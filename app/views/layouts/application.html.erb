<!DOCTYPE html>
<html>
<head>
  <title>SOclone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <nav class="navbar-inner">
      <div class="container">
      <%if user_signed_in? %>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="#" class="navbar-brand">Stackoverflow</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Nueva pregunta", new_question_path %></li>
            <li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      <%else%>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="#" class="navbar-brand">Stackoverflow</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Registrarse", new_user_registration_path %></li>
            <li><%= link_to "Ingresar", new_user_session_path %></li>
          </ul>
        </div>
      <%end%>
      </div>
    </nav>
  </nav>

  <%flash.each do |name, msg|%>
    <%content_tag(:div, msg, class: "alert alert-#{name}")%>
  <%end%>
  <%= yield %>

</body>
</html>
